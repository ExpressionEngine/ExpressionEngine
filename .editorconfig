root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# PHP-Files, Composer.json
[{*.php,composer.json}]
indent_style = space
indent_size = 4

[*.{js,css,json,xml,html}]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[{*.{rst,rb,yml},package.json}]
indent_style = space
indent_size = 2
