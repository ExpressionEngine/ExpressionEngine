{
    "categories": [
      {
        "title": "**Enhancements** 🚀",
        "labels": ["enhancement", "enhancement: accepted"]
      },
      {
        "title": "**Bug Fixes** 💃🐛",
        "labels": ["Bug: Accepted"]
      },
      {
        "title": "**Developers** 💻",
        "labels": ["refactoring", "development"]
      }
    ],
    "ignore_labels": [
      "ignore"
    ],
    "sort": "DESC",
    "template": "${{CHANGELOG}}",
    "pr_template": "- ${{TITLE}}",
    "empty_template": "- no changes",
    "base_branches": [
      "7.dev",
      "7.x",
      "release/7.*"
    ]
  }
